{
  "name": "Come Children!",
  "description": "You have three wonderful children who will help you fight. They're not the smartest bunch, but you love them anyway. \nÂ§5Activate to recall them to your position.",
  "type": "origins:multiple",
  "army": {
    "type": "origins:active_self",
    "cooldown": 300,
    "key": "key.origins.secondary_active",
    "entity_action": {
      "type": "origins:execute_command",
      "command": "function reincarnation-origins:broodmother/army"
    },
    "hud_render": {
      "sprite_location": "origins:textures/gui/community/spiderkolo/resource_bar_02.png",
      "bar_index": 17
    }
  },
  "tick": {
    "type": "origins:action_over_time",
    "interval": 1,
    "entity_action": {
      "type": "origins:execute_command",
      "command": "function reincarnation-origins:broodmother/tick"
    }
  },
  "onhit": {
    "condition": {
      "type": "origins:and",
      "conditions": [
        {
          "inverted": true,
          "type": "origins:nbt",
          "nbt": "{Tags:[brood]}"
        },
        {
          "inverted": true,
          "type": "origins:nbt",
          "nbt": "{Tags:[enemy]}"
        }
      ]
    },
    "type": "origins:action_on_hit",
    "bientity_action": {
      "type": "origins:target_action",
      "action": {
        "type": "origins:and",
        "actions": [
          {
            "type": "origins:execute_command",
            "command": "execute if entity @s[tag=!brood, type=!player] run tag @s add enemy"
          },
          {
            "type": "origins:execute_command",
            "command": "power grant @s reincarnation-origins:broodmother/aggro"
          }
        ]
      }
    },
    "cooldown": 1,
    "hud_render": {
      "should_render": false
    }
  },
  "whenhit": {
    "type": "origins:attacker_action_when_hit",
    "entity_action": {
      "type": "origins:and",
      "actions": [
        {
          "type": "origins:execute_command",
          "command": "execute if entity @s[tag=!brood, type=!player] run tag @s add enemy"
        },
        {
          "type": "origins:execute_command",
          "command": "power grant @s reincarnation-origins:broodmother/aggro"
        }
      ]
    },
    "cooldown": 1,
    "hud_render": {
      "should_render": false
    }
  },
  "callback": {
    "type": "origins:action_on_callback",
    "entity_action_chosen": {
      "type": "origins:execute_command",
      "command": "function reincarnation-origins:broodmother/load"
    },
    "execute_chosen_when_orb": true,
    "entity_action_lost": {
      "type": "origins:and",
      "actions": [
        {
          "type": "origins:execute_command",
          "command": "tag @s remove brood"
        },
        {
          "type": "origins:execute_command",
          "command": "function reincarnation-origins:broodmother/kill_brood"
        }
      ]
    },
    "entity_action_removed": {
      "type": "origins:execute_command",
      "command": "function reincarnation-origins:broodmother/kill_brood"
    },
    "entity_action_respawned": {
      "type": "origins:execute_command",
      "command": "function reincarnation-origins:broodmother/kill_brood"
    }
  }
}
