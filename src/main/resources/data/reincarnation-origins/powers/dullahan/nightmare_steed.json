        "type": "origins:resource",
        "min": 0,
        "max": 1,
        "hud_render": {
            "should_render": false
        }
    },
    "if_died": {
        "type": "origins:action_on_callback",
        "entity_action_respawned": {
            "type": "origins:execute_command",
            "command": "execute as @s at @s run function reincarnation-origins:dullahan/kill_steed",
            "permission_level": 4
        }
    },
    "reload": {
        "type": "origins:action_on_callback",
        "entity_action_added": {
            "type": "origins:execute_command",
            "command": "execute as @s at @s run function reincarnation-origins:dullahan/reload",
            "permission_level": 4
        }
    },
    "load": {
        "type": "origins:action_on_callback",
        "entity_action_gained": {
            "type": "origins:execute_command",
            "command": "execute as @s at @s run function reincarnation-origins:dullahan/load",
            "permission_level": 4
        }
    },
    "activate": {
        "type": "origins:active_self",
        "hud_render": {
            "should_render": true,
            "sprite_location": "origins:textures/gui/community/spiderkolo/resource_bar_02.png",
            "bar_index": 17
        },
        "key": "secondary",
        "cooldown": 600,
        "entity_action": {
            "type": "origins:and",
            "actions": [{
                    "type": "origins:execute_command",
                    "command": "execute as @s run function reincarnation-origins:dullahan/summon_steed",
                    "permission_level": 4
